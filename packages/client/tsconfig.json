{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "~/*": ["./*"]
    },
    "skipLibCheck": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../shared" }]
}
